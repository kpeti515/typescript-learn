{
  "name": "typescript-learn",
  "version": "1.0.0",
  "description": "a small playground where i learn typescript",
  "main": "index.js",
  "author": "Lorand Kallai <lorandkallai@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^4.3.8",
    "onchange": "^7.1.0",
    "prettier": "^2.3.2"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "prettier-format-ts": "prettier --config .prettierrc \"./**/*.{ts,tsx}\" --write",
      "prettier-format-js": "prettier --config .prettierrc \"./**/*.{js,jsx}\" --write",
    "prettier-watch": "onchange \"./**/*.{ts,js,jsx}\" -- prettier --write {{changed}}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format-ts && npm run prettier-format-js && npm run lint && git add ."
    }
  },
  "dependencies": {
    "typescript": "^4.4.2"
  }
}
