{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "lib": [
      "es2020",
      "DOM"
    ],
    "module": "commonjs",
    "target": "es2020",
    "strict": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "watch": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}